.intro_top image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-top: -35rpx;
}
.intro_top {
  text-align: center;
  border-bottom: 1px solid #D2D2D2;
}
.site {
  color: #ABABAB;
  margin-left: 20rpx;
}
page {
  font-size: 25rpx;
  font-family: "微软雅黑";
  background: #EDEDED;
  height: 100%;
}
.name {
  font-size: 30rpx;
}
.intro_Past {
  color: #ABABAB;
  margin-top: 10rpx;
}
.intro {
  background: #fff;
  height: 100%;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-shadow: 0px 1px 5px 2px #ccc;
}
.big {
  height: 92%;
  padding: 45rpx 20rpx 30rpx 20rpx;
