}
.intro_name {
  margin-top: 10rpx;
}
.phone image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle; 
  margin-top: -5rpx;
  margin-right: 10rpx;
}
.phone {
  margin-top: 25rpx;
  margin-bottom: 30rpx;
}
.user_intro {
  color: #ABABAB;
  text-align: center;
  margin-top: 20rpx;
}
 .intro_centre {
  margin-top: 20rpx;
  line-height:40rpx;
   text-indent:2em;
} 
.bottom_nav {
  display: flex;
  height: 8%;
  align-items: center;
  font-size: 32rpx;
  border-top: 1px solid #D2D2D2;
  background: #fff;
  box-sizing: border-box;
}
.nav_left {
  width: 30%;
  text-align: center;
}
.nav_right {
  width: 70%;
  height: 100%;
  background: #336598;
  color: #fff;
  display: flex;
  align-items: center;
}
.nav_right text {
  margin: 0 auto;
}